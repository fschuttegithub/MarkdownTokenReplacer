<?xml version="1.0" encoding="utf-8"?>
<widget
    id="kobeon.markdowntokenreplacer.MarkdownTokenReplacer"
    pluginWidget="true"
    needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Markdown Token Replacer</name>
    <description>Replace matched Markdown tokens with inline Mendix content.</description>
    <icon />

    <properties>
        <propertyGroup caption="General">
            <property key="markdownInput" type="attribute" required="true">
                <caption>Markdown Input</caption>
                <description>Attribute containing the Markdown text to render.</description>
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="sanitize" type="boolean" defaultValue="true">
                <caption>Sanitize HTML</caption>
                <description>Sanitize rendered HTML with DOMPurify.</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Tokens">
            <property key="tokens" type="datasource" isList="true">
                <caption>Token Items</caption>
                <description>List data source that provides the items matched in the Markdown.</description>
            </property>
            <property key="tokenPattern" type="expression" dataSource="tokens" required="true">
                <caption>Token Pattern</caption>
                <description>Literal text or /regex/flags expression evaluated per item to find matches in the Markdown.</description>
                <returnType type="String" />
            </property>
            <property key="tokenContent" type="widgets" dataSource="tokens">
                <caption>Token Content</caption>
                <description>Widgets rendered in place of each matched token.</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
